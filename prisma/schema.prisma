// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

model User {
  id            String  @id @default(uuid())
  firstName     String
  lastName      String
  email         String 

  deleted       Boolean
  deletedAt     DateTime
  updatedAt     DateTime
}

model Business {
  id            String  @id @default(uuid())
  name          String


  deleted       Boolean
  deletedAt     DateTime
  updatedAt     DateTime
}

model Product {
  id            String  @id @default(uuid())
  name          String
  price         Int
  deleted       Boolean
  deletedAt     DateTime
  updatedAt     DateTime
}